	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// 요청 전 실행되는 스크립트",
					"console.log('API 요청 시작: ' + new Date().toISOString());"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// 응답 후 실행되는 테스트 스크립트",
					"pm.test('응답 상태가 200이어야 함', function () {",
					"    pm.response.to.have.status(200);",
					"});",
					"",
					"pm.test('응답이 JSON 형식이어야 함', function () {",
					"    pm.response.to.be.json;",
					"});",
					"",
					"// 채팅 응답인 경우 thread_id 저장",
					"if (pm.response.json().thread_id) {",
					"    pm.environment.set('thread_id', pm.response.json().thread_id);",
					"    console.log('Thread ID 저장됨: ' + pm.response.json().thread_id);",
					"}",
					"",
					"// 실행 ID가 있는 경우 저장",
					"if (pm.response.json().id && pm.response.json().object === 'thread.run') {",
					"    pm.environment.set('run_id', pm.response.json().id);",
					"    console.log('Run ID 저장됨: ' + pm.response.json().id);",
					"}"
				]
			}
		}
