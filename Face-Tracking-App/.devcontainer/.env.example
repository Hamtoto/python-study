# Face-Tracking-App 환경 변수 예시
# 실제 사용시 .env 파일로 복사하여 수정

# GPU 설정
CUDA_VISIBLE_DEVICES=all
NVIDIA_VISIBLE_DEVICES=all
PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True

# 성능 설정
OMP_NUM_THREADS=8
CUDA_LAUNCH_BLOCKING=0

# 개발 설정
PYTHONPATH=/workspace
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# 디스플레이 설정 (GUI 앱용)
DISPLAY=:0

# 메모리 제한 (GB)
DOCKER_MEMORY_LIMIT=32g
DOCKER_CPU_LIMIT=16

# 로그 레벨
LOG_LEVEL=INFO

# 비디오 처리 설정
INPUT_DIR=/workspace/videos/input
OUTPUT_DIR=/workspace/videos/output
TEMP_DIR=/workspace/temp_proc

# 모델 캐시 디렉토리
TORCH_HOME=/home/developer/.torch
TRANSFORMERS_CACHE=/home/developer/.cache